{
	"name": "spawnpoint",
	"version": "2.0.0",
	"description": "Agnostic JS framework that empowers devs to focus on quickly building apps, rather than focusing on application config, health-checks, application structure, or architecture to build a 12 factor app in Docker.",
	"main": "index.js",
	"scripts": {
		"test": "npm run lint && npm run nyc",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"mocha": "mocha",
		"docs": "jsdoc2md lib/spawnpoint.js > docs.md",
		"coverage": "nyc report --reporter=lcov",
		"nyc": "nyc mocha",
		"precommit": "lint"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nodecraft/spawnpoint"
	},
	"keywords": [
		"app",
		"spawnpoint",
		"framework",
		"events",
		"errors",
		"docker",
		"graceful",
		"shutdown",
		"sigint",
		"sigkill",
		"infrastructure",
		"structure",
		"config",
		"management",
		"folders",
		"auto",
		"include"
	],
	"author": "Nodecraft, Inc.",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nodecraft/spawnpoint/issues"
	},
	"homepage": "https://github.com/nodecraft/spawnpoint",
	"engines": {
		"node": ">=12",
		"npm": ">=6.4.1"
	},
	"dependencies": {
		"async": "^3.2.2",
		"chalk": "^4.1.0",
		"dayjs": "^1.10.4",
		"json-lint": "^0.1.0",
		"lodash": "^4.17.21",
		"minimist": "^1.2.5",
		"nanoid": "^3.1.20",
		"string-template": "^1.0.0",
		"strip-json-comments": "^3.1.1"
	},
	"devDependencies": {
		"coveralls": "^3.1.0",
		"eslint": "^7.20.0",
		"eslint-config-nodecraft": "^7.3.1",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-unicorn": "^28.0.2",
		"jsdoc-to-markdown": "^6.0.1",
		"mocha": "^8.3.0",
		"nyc": "^15.1.0",
		"process-void": "^1.0.2",
		"unexpected": "^12.0.0",
		"unexpected-eventemitter": "^2.2.0"
	}
}
