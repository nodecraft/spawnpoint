{
	"name": "spawnpoint",
	"version": "2.0.0",
	"description": "Agnostic JS framework that empowers devs to focus on quickly building apps, rather than focusing on application config, health-checks, application structure, or architecture to build a 12 factor app in Docker.",
	"main": "index.js",
	"scripts": {
		"test": "npm run lint && npm run nyc",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"mocha": "mocha",
		"docs": "jsdoc2md lib/spawnpoint.js > docs.md",
		"coverage": "nyc report --reporter=lcov",
		"nyc": "nyc mocha",
		"precommit": "lint"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nodecraft/spawnpoint"
	},
	"keywords": [
		"app",
		"spawnpoint",
		"framework",
		"events",
		"errors",
		"docker",
		"graceful",
		"shutdown",
		"sigint",
		"sigkill",
		"infrastructure",
		"structure",
		"config",
		"management",
		"folders",
		"auto",
		"include"
	],
	"author": "Nodecraft, Inc.",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nodecraft/spawnpoint/issues"
	},
	"homepage": "https://github.com/nodecraft/spawnpoint",
	"engines": {
		"node": ">=18",
		"npm": ">=8"
	},
	"dependencies": {
		"async": "^2.6.4",
		"dayjs": "^1.11.10",
		"json-lint": "^0.1.0",
		"lodash": "^4.17.21",
		"minimist": "^1.2.8",
		"nanoid": "^3.3.6",
		"string-template": "^1.0.0",
		"strip-json-comments": "^3.1.1"
	},
	"devDependencies": {
		"@nodecraft/eslint-config": "^28.0.0",
		"coveralls": "^3.1.1",
		"eslint": "^8.52.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"jsdoc-to-markdown": "^8.0.0",
		"kleur": "^4.1.5",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"process-void": "^1.0.2",
		"unexpected": "^12.0.5",
		"unexpected-eventemitter": "^2.4.0"
	}
}
